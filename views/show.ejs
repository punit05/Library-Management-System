<% include partials/header%>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Library Management System</p>
            <div class="list group">
                <li class"list-group-item active">Info 1</li>
                  <li class"list-group-item">Info 2</li>
                    <li class"list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=genre.image%>">
            </div>
            <div class="caption-full">
                <a><h4><%=genre.name%></h4></a>
                <p><%=genre.description%></p>
                <a href="/genre/<%=genre._id%>/edit">Edit A Genre</a>
            </div>
            
        </div>
        <div class="well">
            <div class="text-right">
                <a  class="btn btn-succes" href="/genre/<%=genre._id%>/add/new">Add New Book</a>
            </div>
            
            <%genre.book.forEach(function(book)
                {%>
                
                <div class="row">
                    <div class="col-md-12">
                        <p><%=book.book_name%></p>
                        <span class="pull right"><%=book.id%></span>
                        <p><%=book.genre_name%></p>
                
                <img src="<%=book.image%>">
                <p><%=book.edition%></p>
                <p><%=book.publisher%></p>
                <p><%=book.price%></p>
                <p><%=book.pages%></p>
                
                
           
                <a class="btn btn-xs btn-warning" href="<%=genre._id%>/add/<%=book._id%>/new_issue">Issue a Book</a>  
                 <a  href="<%=genre._id%>/add/<%=book._id%>/return_book">return a Book</a>
                
               
                
            
                 
                        <%})%>
                      
                    </div>
                    
                </div>
                
               

            
        </div>
    </div>
</div>






